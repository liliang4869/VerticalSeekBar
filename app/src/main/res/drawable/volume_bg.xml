<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:height="@dimen/dp_6" android:top="@dimen/dp_5">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/dp_4" />
            <gradient
                android:endColor="#ff1C1E2E"
                android:startColor="#ff1C1E2E" />
        </shape>
    </item>
    <item android:id="@android:id/progress" android:height="@dimen/dp_6" android:bottom="@dimen/dp_5"
        android:top="@dimen/dp_5">
        <clip android:gravity="left">

            <shape>
                <gradient
                    android:angle="90"
                    android:endColor="#ffff6600"
                    android:startColor="#ffff8800" />
                <corners android:radius="@dimen/dp_4" />
            </shape>

        </clip>
    </item>

</layer-list>